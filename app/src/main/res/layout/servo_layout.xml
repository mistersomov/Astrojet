<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/x_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        app:icon="@drawable/ic_baseline_remove_24"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        app:iconGravity="textStart"
        app:elevation="1dp"/>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/x_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/x_minus"
        android:layout_alignBottom="@+id/x_minus"
        android:layout_centerInParent="true"
        android:text="0"
        android:textSize="32sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/x_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentEnd="true"
        app:icon="@drawable/ic_baseline_add_24"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        app:iconGravity="textStart"
        app:elevation="1dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/y_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/x_minus"
        app:icon="@drawable/ic_baseline_remove_24"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        app:iconGravity="textStart"
        app:elevation="1dp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/y_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/y_minus"
        android:layout_alignBottom="@+id/y_minus"
        android:layout_centerInParent="true"
        android:layout_below="@+id/x_value"
        android:text="0"
        android:textSize="32sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/y_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/x_plus"
        app:icon="@drawable/ic_baseline_add_24"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        app:iconGravity="textStart"
        app:elevation="1dp"/>

</RelativeLayout>